# Path to volume control, without trailing slash
set $volumepath ~/i3-volume
set $statuscmd i3status
# Signal used to update the status line
set $statussig SIGUSR1
set $volumestep 5
bindsym XF86AudioRaiseVolume exec --no-startup-id $volumepath/volume -n -t $statuscmd -u $statussig up $volumestep
bindsym XF86AudioLowerVolume exec --no-startup-id $volumepath/volume -n -t $statuscmd -u $statussig down $volumestep
bindsym XF86AudioMute        exec --no-startup-id $volumepath/volume -n -t $statuscmd -u $statussig mute

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

## Cycle through workspaces.
bindsym $mod+n workspace next
bindsym $mod+b workspace prev

## rofi bindings fancy application menu (two bindings F9/$mod+d)

bindsym $mod+d exec rofi -modi drun -show drun -display-drun "Apps : " -line-padding 4 \
                -columns 2 -padding 50 -hide-scrollbar \
                -show-icons -theme "gruvbox-dark" -font "Noto Sans Regular 15"


## rofi bindings for window menu (two bindings F10/$mod+t)

bindsym $mod+t exec rofi -show window -display-window "Window : " -line-padding 4 \
                -lines 10 -padding 50 -hide-scrollbar \
                -show-icons -theme "gruvbox-dark" -font "Noto Sans Regular 15"


